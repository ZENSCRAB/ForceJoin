import requests,sys,webbrowser,time

# ========= ADMIN SETTINGS ========= #

GLOBAL = "on"          # on / off
FORCE_JOIN = "on"

ON_MSG  = "  âœ… ğ—”ğ—–ğ—–ğ—˜ğ—¦ğ—¦ ğ—šğ—¥ğ—”ğ—¡ğ—§ğ—˜ğ—— "
OFF_MSG = " âŒ ğ—¦ğ—§ğ—¢ğ—£ğ—£ğ—˜ğ—— ğ—•ğ—¬ ğ—”ğ——ğ— ğ—œğ—¡ "

CHANNEL_ID   = -1003878622191
CHANNEL_LINK = "https://t.me/PrivateEra"

ADMIN_BOT = "7794472674:AAEwhIXqy4zpjn9sVEIjI0FS-cDakHrwq7g"

# ========= GLOBAL STOP ========= #

if GLOBAL != "on":
    print(OFF_MSG)
    webbrowser.open(CHANNEL_LINK)
    sys.exit()

print(ON_MSG)

# ========= WAIT UNTIL USER ENTERS ID ========= #

while "ID" not in globals():
    time.sleep(0.3)

user_id = globals()["ID"]

# ========= FORCE JOIN ========= #

if FORCE_JOIN == "on":

    print("\nğŸ”’ Join our channel to use this tool\n")
    webbrowser.open(CHANNEL_LINK)

    input("After joining press ENTER...")

    try:
        r = requests.get(
            f"https://api.telegram.org/bot{ADMIN_BOT}/getChatMember",
            params={"chat_id": CHANNEL_ID, "user_id": user_id}
        ).json()

        ok = r["ok"] and r["result"]["status"] in ["member","administrator","creator"]

    except:
        ok = False

    if not ok:
        print("âŒ JOIN FIRST")
        sys.exit()
